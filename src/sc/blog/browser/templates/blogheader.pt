<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      i18n:domain="sc.blog">
<body>

<tal:viewlet condition="viewlet/available">
  <div tal:define="blog viewlet/blog;
                   image nocall:blog/image"
      tal:condition="nocall:image">
    <a href="" tal:attributes="href viewlet/blog_url">
      <img tal:define="scale blog/@@images"
          tal:replace="structure python: scale.scale('image').tag()" />
    </a>
  </div>
</tal:viewlet>

</body>
</html>